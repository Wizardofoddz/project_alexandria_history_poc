= form_for @archive_item do |f|
  - if @archive_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@archive_item.errors.count, "error")} prohibited this archive_item from being saved:"
      %ul
        - @archive_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :archive_id
    = f.number_field :archive_id
  .field
    = f.label :item_term
    = f.text_field :item_term
  .field
    = f.label :item_type
    = f.text_field :item_type
  .actions
    = f.submit 'Save'
