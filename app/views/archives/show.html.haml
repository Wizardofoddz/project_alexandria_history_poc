.container
  .row
    .col-lg-12#canvas_data{:'data-word-count' => @word_count_array}
      #word_cloud
    .col-lg-12#spinner{:'data-archive-id' => @archive.id}
      = image_tag 'spinner.gif'
    .col-lg-12#price_data
      %p
        Price:
        %span#florincoin_price
      %p
        Address:
        %span#florincoin_address
  .row#popular
    .col-md-6
      %h4.thin Most Popular Links
    .col-md-6
      %h4.thin Most Popular Videos
  .row#records
    .col-md-6
      %ul
        - 3.times do |link|
          = render 'popular_link'
    .col-md-6
      %ul
        - 3.times do |link|
          = render 'popular_link'
