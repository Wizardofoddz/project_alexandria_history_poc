= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :volume_id
    = f.number_field :volume_id
  .field
    = f.label :page_title
    = f.text_field :page_title
  .actions
    = f.submit 'Save'
